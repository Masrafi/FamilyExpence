<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="6dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <RelativeLayout
        android:background="#edd1d1"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >




        <TextView
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/row_emp_name"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="Sabbir Rahman"/>

        <TextView
            android:id="@+id/row_emp_desg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_emp_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-24dp"
            android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp"
            android:layout_marginBottom="2dp"
            android:text="Jr Software Engineer"
            android:textSize="14sp" />

        <TextView
            android:layout_margin="6dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/row_emp_info"
            android:textSize="22sp"
            android:text="@string/row_menu"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>